---
import { db, manicuristas, servicios } from "astro:db";

const allManicuristas = await db.select().from(manicuristas);
const services = await db.select().from(servicios);
---

<button id="openModalBtn" class="block mx-auto mt-10 bg-primary text-white px-4 py-2 rounded-md shadow-md">Reservar Servicio</button>
<form class="w-[500px] max-h-screen hidden border-2 bg-white p-4 rounded-md" id="reservaForm">
  <label for="name" class="block mb-2">Nombre:</label>
  <input
    type="text"
    id="name"
    name="name"
    required
    placeholder="Escribe tu Nombre"
    class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-primary block w-full mb-4"
  />

  <label for="address" class="block mb-2">Dirección:</label>
  <input
    type="text"
    id="address"
    name="address"
    placeholder="Ingresa tu dirección"
    required
    class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-primary block w-full mb-4"
  />

  <label for="telephone" class="block mb-2">Teléfono:</label>
  <input
    type="tel"
    id="telephone"
    name="telephone"
    required
    placeholder="Escribe tu número de WhatsApp"
    class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-primary block w-full mb-4"
  />

  <label for="service" class="block mb-2">Servicio:</label>
  <select id="service" name="serviceId" required class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-primary block w-full mb-4">
    <option value="" disabled selected>Selecciona el servicio</option>
    {
      services.map((service) => (
        <option value={service.id}>{service.nombre}</option>
      ))
    }
  </select>

  <label for="manicurista" class="block mb-2">Manicurista:</label>
  <select id="manicurista" name="manicuristaId" required class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-primary block w-full mb-4">
    <option value="" disabled selected>Selecciona una manicurista</option>
    {
      allManicuristas.map((manicurista) => (
        <option value={manicurista.id}>{manicurista.nombre}</option>
      ))
    }
  </select>

  <label for="date" class="block mb-2">Fecha de Cita:</label>
  <input type="datetime-local" id="date" name="date" required class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-primary block w-full mb-4" />

  <button type="submit" id="reservarBtn" class="bg-primary text-white px-4 py-2 rounded-md shadow-md">Reservar</button>
</form>

<script>
  const openModalBtn = document.getElementById("openModalBtn");
  const reservarBtn = document.getElementById("reservarBtn");
  const reservaForm = document.getElementById("reservaForm") as HTMLFormElement;

  openModalBtn?.addEventListener("click", () => {
    reservaForm.classList.toggle("hidden");
  });

  reservarBtn?.addEventListener("click", async (e) => {
    e.preventDefault();
    const formData = new FormData(reservaForm);
    try {
      const response = await fetch("/api/reserva", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(Object.fromEntries(formData.entries())),
      });

      if (!response.ok) {
        console.log(response);
        throw new Error("Error al enviar la solicitud");
      }
      const clientId = await response.json();
      console.log(clientId);
      localStorage.setItem("clientId", clientId);
    } catch (error) {
      console.error(error);
    }
  });
</script>

<style>
  form {
    max-width: 600px;
    margin: 20px auto;
  }

  label {
    display: block;
    margin-bottom: 8px;
  }

  input,
  select {
    width: 100%;
    padding: 10px;
    margin-bottom: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  button {
    background-color: #f54e85;
    color: #fff;
    padding: 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
</style>