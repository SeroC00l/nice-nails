---
import Layout from "@/layouts/Layout.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import { services } from "@/consts/services.ts";
---

<Layout title="Nuestros Servicios">
  <main>
    <h1 class="my-10 text-4xl font-bold text-center text-pink-500">
      Servicios de Manicure
    </h1>

    <div
      class="flex justify-center flex-wrap items-center gap-x-8 gap-y-48 px-10"
    >
      {
        services.map((service, index) => (
          <ServiceCard service={service} key={index} />
        ))
      }
    </div>
    <div class="flex justify-center mt-52">
      <a
        href="https://wa.me/573133401152"
        target="_blank"
        rel="noopener norerer"
        class="bg-pink-500 hover:bg-pink-600 text-white py-3 px-6 rounded-md transition duration-300 ease-in-out"
      >
        Reserva Ahora!!
      </a>
    </div>s
  </main>
</Layout>
